{
  "name": "cheat-key-monorepo",
  "version": "1.0.0",
  "description": "Root controller for the cheat-key project",
  "private": true,
  "scripts": {
    "dev:frontend": "cd src/front-end && npm run dev",
    "dev:backend": "cd src/back-end && npm run dev",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "i": "npm i && cd src/front-end && npm install && cd ../back-end && npm install"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "dependencies": {
    "@azure/identity": "^4.11.1",
    "@azure/keyvault-secrets": "^4.10.0",
    "redis": "^5.8.2"
  }
}
