{
  "name": "cheat-key-monorepo",
  "version": "1.0.0",
  "description": "Root controller for the cheat-key project",
  "private": true,
  "workspaces": [
    "src/front-end",
    "src/back-end"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=front-end",
    "dev:backend": "npm run dev --workspace=back-end",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\""
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "dependencies": {
    "redis": "^5.8.2"
  }
}